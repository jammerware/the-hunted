{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mvn package"
        },
        {
            "label": "run debug client",
            "type": "shell",
            "options": {
                "cwd": "${config:sts.directory}"
            },
            "command": [
                "java -jar mts-launcher.jar"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "debug",
            "dependsOn": [
                "build",
                "run debug client"
            ],
            "problemMatcher": []
        }
    ]
}